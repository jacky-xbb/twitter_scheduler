<div class="mx-auto w-full max-w-md">
  <h1 class="font-hairline mb-6 text-center">Sign up</h1>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "bg-white mb-4 px-8 pt-6 pb-8 rounded shadow-md" }) do |f| %>
    <%= devise_error_messages! %>
    <div class="mb-4">
      <%= f.label :name, class: "block font-bold mb-2 text-gray-700 text-sm" %>
      <%= f.text_field :name, class: "input w-full" %>
    </div>

    <div class="mb-4">
      <%= f.label :username, class: "block font-bold mb-2 text-gray-700 text-sm" %>
      <%= f.text_field :username, class: "input w-full" %>
    </div>

    <div class="mb-4">
      <%= f.label :email, class: "block font-bold mb-2 text-gray-700 text-sm" %>
      <%= f.email_field :email, autocomplete: "email", placeholder: "user@example.com", class: "input w-full" %>
    </div>

    <div class="mb-4">
      <%= f.label :password, class: "block font-bold mb-2 text-gray-700 text-sm" %>
      <%= f.password_field :password, autocomplete: "new-password", class: "input w-full" %>
    </div>

    <div class="mb-4">
      <%= f.label :password_confirmation, class: "block font-bold mb-2 text-gray-700 text-sm" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input w-full" %>
    </div>

    <div class="mb-4">
      <%= f.submit "Sign Up", class: "button" %>
      <%= link_to "Log in", new_session_path(resource_name), class: "ml-4 inline-block align-baseline text-sm text-blue-500 hover:text-blue-800" %>
    </div>
  <% end %>
  <%= render "devise/shared/form_footer" %>
</div>
